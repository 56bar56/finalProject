<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questionnaireActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/questionnaireTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trip Preferences"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <!-- Destination Input -->
    <EditText
        android:id="@+id/destinationInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your desired destination"
        app:layout_constraintTop_toBottomOf="@id/questionnaireTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Minimum Budget Input -->
    <EditText
        android:id="@+id/minBudgetInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter minimum budget"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/destinationInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Maximum Budget Input -->
    <EditText
        android:id="@+id/maxBudgetInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter maximum budget"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/minBudgetInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Location Preference Spinner -->
    <Spinner
        android:id="@+id/locationPreferenceSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/maxBudgetInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Trip Type Spinner -->
    <Spinner
        android:id="@+id/tripTypeSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/locationPreferenceSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Start Date Input -->
    <EditText
        android:id="@+id/startDateInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter start date (yyyy-mm-dd)"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/tripTypeSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- End Date Input -->
    <EditText
        android:id="@+id/endDateInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter end date (yyyy-mm-dd)"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/startDateInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/endDateInput"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
